<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.arzz.ebasics.ebasics.windowsControllers.CalculateCommision"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        <!-- Título -->
        <Label text="Cálculo de Comisión de Venta" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <!-- Entrada de texto para el monto de la venta -->
        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Monto de la Venta:"/>
            <TextField fx:id="saleAmount" promptText="Ingrese el monto de la venta"/>
        </HBox>

        <!-- Botón para calcular la comisión -->
        <Button text="Calcular Comisión" onAction="#calculateCommission"/>

        <!-- Resultado -->
        <Label fx:id="resultLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    </VBox>
</AnchorPane>
