<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.arzz.ebasics.ebasics.EBasiController"
      stylesheets="/styles.css">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Label text="ArZz E-Basics" styleClass="title"/>

    <GridPane hgap="15" vgap="15" alignment="CENTER">
        <Button text="Calcular Áreas" onAction="#onCalculateAreas" styleClass="menu-button" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button text="Convertir Temperatura" onAction="#onConvertTemperature" styleClass="menu-button" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Button text="Calcular Comisión" onAction="#onCalculateCommission" styleClass="menu-button" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Button text="Aumento Descuento" onAction="#onSalaryIncrease" styleClass="menu-button" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button text="Comparar Números" onAction="#onCompareNumbers" styleClass="menu-button" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Button text="Descuento Videoclub" onAction="#onVideoClubDiscount" styleClass="menu-button" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button text="Calificaciones a Texto" onAction="#onGradesToText" styleClass="menu-button" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Button text="Calificaciones a Letra" onAction="#onGradeToLetter" styleClass="menu-button" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Button text="Salario con Horas Extras" onAction="#onSalaryWithOvertime" styleClass="menu-button" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Button text="Convertir Minutos" onAction="#onConvertMinutes" styleClass="menu-button" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Button text="CONDICIONALES" onAction="#onConditionals" styleClass="menu-button-sub" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Button text="CICLOS" onAction="#onLoops" styleClass="menu-button-sub" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>
    <Label text="PUTO EL QUE LO LEA" />
</VBox>

